---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-24 flex-col items-center gap-4 space-y-8"
>
  <div class="flex flex-col items-center gap-2">
    <slot name="eyebrow" />
    <h2
      class="gradient-text text-center font-[900] tracking-tight text-6xl"
    >
      {title}
    </h2>
  </div>
  <p class="font-regular text-l w-3/4 text-center 2xl:w-2/4">
    <slot name="lead" />
  </p>
  <slot />
</section>
