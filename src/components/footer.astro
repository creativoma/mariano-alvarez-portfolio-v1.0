---

<footer id="contacto" class="m-auto flex w-7/12 flex-col gap-6 pb-36">
  <nav class="hidden sm:block">
    <ul class="flex items-center justify-center gap-6">
      {
        navItems.map(({ title, url }) => (
          <li>
            <a class="text-sm" href={url} target="_blank" aria-label={"Ir a " + title}>
              {title}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <div>
    <div class="flex flex-wrap items-center justify-center gap-6">
      <a
        href="https://www.marianoalvarez.dev/"
        target="_blank"
        aria-label="Personal Website"
        >{websiteIcon ? <Fragment set:html={websiteIcon} /> : ""}</a
      >
      <a
        href="https://github.com/creativoma/"
        target="_blank"
        aria-label="Github"
        >{githubIcon ? <Fragment set:html={githubIcon} /> : ""}</a
      >
      <a
        href="https://twitter.com/dev_creativoma"
        target="_blank"
        aria-label="Twitter"
        >{githubIcon ? <Fragment set:html={XIcon} /> : ""}</a
      >
      <a
        href="https://www.linkedin.com/in/ma-marianoalvarez/"
        target="_blank"
        aria-label="Linkedin"
        >{githubIcon ? <Fragment set:html={linkedinIcon} /> : ""}</a
      >
      
      <p class="text-center text-sm">
        Copyright © {time} - <a href="/">Mariano Álvarez</a>
      </p>
    </div>
  </div>
